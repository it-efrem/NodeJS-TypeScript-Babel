// See all compiler options -> https://www.typescriptlang.org/docs/handbook/compiler-options.html

{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}